<Configuration status="ERROR">
  <properties>
    <property name="LOG_DIR">target/logs</property>
  </properties>
  <MarkerFilter marker="FLOW" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ABSOLUTE} %-5level # %class.%method %m%n" />
    </Console>

    <RollingFile name="log4j" fileName="${LOG_DIR}/log4j.txt" filePattern="${LOG_DIR}/archive/log4j.txt.%d{yyyyMMdd_HH}-%i">
      <PatternLayout>
        <MarkerPatternSelector defaultPattern="%d [%t] %-5p %C{1.}.%M:%L - %m%n">
          <PatternMatch key="FLOW" pattern="%d [%t] %-5p -------- %C{1.}.%M:%L %msg --------%n"/>
        </MarkerPatternSelector>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="30 MB"/>
      </Policies>
      <DefaultRolloverStrategy min="1" max="20"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="log4j" />
    </Root>
  </Loggers>
</Configuration>
